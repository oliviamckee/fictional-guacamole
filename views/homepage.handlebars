<div>
    <h1 class="username">Hello, {{username}}!</h1>
    <nav class="card-footer">
        <a href="/add-pet" class="card-footer-item button-34">Add Pet</a>
    </nav>
</div>


<div class="columns is-centered mr-1 ml-1">
    {{#each pets}}
    <div class="column is-flex-wrap-wrap">

        <div class="card p-2 box tan">

            <header class="card-header">
                <p class="card-header-title is-size-4 green">
                    ✏️{{name}}
                </p>
            </header>
            <div class="card-content">
                <div>
                    <table>
                        <tr>
                            <th>🐈</th>
                            <th><b>species &nbsp;🐕</b></th>
                            <th>{{species}}</th>
                        </tr>
                        <tr>
                            <th>🐩</th>
                            <th><b>breed &nbsp;🐅</b></th>
                            <th>{{breed}}</th>
                        </tr>
                        <tr>
                            <th> &nbsp;⚥</th>
                            <th><b>sex</b></th>
                            <th>{{sex}}</th>
                        </tr>
                        <tr>
                            <th>🎂</th>
                            <th><b>birthday</b></th>
                            <th>{{birthday}}</th>
                        </tr>
                        <tr>
                            <th>⚕️</th>
                            <th><b>medical-history</b></th>
                            <th>{{medical_history}}</th>
                        </tr>
                        <tr>
                            <th>🌳</th>
                            <th><b>medications</b></th>
                            <th>{{medications}}</th>
                        </tr>
                        <tr>
                            <th>📔</th>
                            <th><b>personality</b></th>
                            <th>{{personality}}</th>
                        </tr>
                        <tr>
                            <th>⚠️</th>
                            <th><b>caution</b></th>
                            <th>{{caution}}</th>
                        </tr>
                        <tr>
                            <th>🏥</th>
                            <th><b>veterinarian</b></th>
                            <th>{{vet}}</th>
                        </tr>
                        <tr>
                            <th>🔎</th>
                            <th><b>other</b></th>
                            <th>{{other}}</th>
                        </tr>
                    </table>
                </div>
                <div class="card-footer">
                    <a href="/edit/{{id}}" class="card-footer-item button-33">Edit</a>
                </div>
            </div>

        </div>

    </div>
    {{/each}}
</div>