<div>
    <h1 class="username">Hello, {{username}}!</h1>
    <nav class="card-footer">
        <a href="/add-pet" class="card-footer-item button-34">Add Pet</a>
    </nav>
</div>


<div class="columns is-centered mr-1 ml-1">
    {{#each pets}}
    <div class="column is-flex-wrap-wrap">

        <div class="card p-2 box">

            <header class="card-header">
                <p class="card-header-title is-size-4">
                    {{name}}
                </p>
                <button class="card-header-icon" aria-label="more options">
                    <span class="icon">
                        <i class="fas fa-angle-down" aria-hidden="true"></i>
                    </span>
                </button>
            </header>
            <div class="card-content">
                <div>
                    <b>species:</b> {{species}}
                    </br><b>breed:</b> {{breed}}
                    </br><b>sex:</b> {{sex}}
                    </br><b>birthday:</b> {{birthday}}
                    </br><b>medical-history:</b> {{medical_history}}
                    </br><b>medications:</b> {{medications}}
                    </br><b>personality:</b> {{personality}}
                    </br><b>caution:</b> {{caution}}
                    </br><b>veterinarian:</b> {{vet}}
                    </br><b>other:</b> {{other}}
                </div>
                <footer class="card-footer">
                    <a href="/edit/{{id}}" class="card-footer-item button-33">Edit</a>
                </footer>
            </div>

        </div>

    </div>
    {{/each}}
</div>